<%= destroy_grid(@grid, :confirm => _('Really delete?')) %>
<%= link_to_remote 'add child', :url => create_child_grid_path(@grid), :method => :post %>
<% update_grid(@grid) do |f| %>
  <%= f.select :grid_class, Grid::Types.invert %>
  <%= show_grid(@grid, :label => 'cancel') %>
  <%= submit_tag _('OK') %>
<% end %>
