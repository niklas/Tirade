/* Drag & Drop */


*.active-droppable, *.active-sortable {
  background: url(../images/pentagon-tile.jpg) repeat !important;
  min-height: 1em;
  div.warning { background: transparent }
  .drop-hover {
    background: url(../images/pentagon-tile-active.jpg) repeat !important;
  }
}

*.ui-sortable.empty, *.ui-droppable.empty  {
  background: url(../images/pentagon-tile.jpg) repeat;
  min-height: 3em;
  min-width; 6em;
}
*.placeholder, *.ui-sortable-placeholder {
  background: url(../images/pentagon-tile-active.jpg) repeat !important;
  min-height: 3em;
  min-width: 6em;
}

*.ui-draggable, *.ui-sortable {
  span.handle {
    position: absolute;
    right: 32px;
    top: 50%;
    background: url(../images/icons/small/move.gif) no-repeat;
    cursor: move;
    display: block;
    width: 16px;
    height: 16px;
    text-indent: -5000px;
    outline: 0;
    margin: -8px 2px 2px 2px;
  }
}
*.ui-draggable-dragging {
  background-color: <%= @colors[:base] %>;
  border: thick solid <%= @colors[:hover] %>;
  padding: <%= @small %> <%= @big %>;
  list-style: none;
  margin: 0;
  a.show, a.edit, a.index { display: none !important; }
  a.association { display: none !important; }
}


body div {
  .warning {
    padding: 0.5em;
    overflow: hidden;
    .empty {
      min-height: 8em;
    }
  }
  .error {
    width: 33%;
    min-width: 30em;
    max-width: 90%;
    margin: 1em auto;
    div.ui-state-error {
      padding: 1em;
    }
  }



  .grid {
    position: relative;
    .empty {
      height: 8em;
    }
  }

  ul.tree {
    .tree_root {
      clear: both;
      padding: 0;
      margin: 0;
      background-color: white;
    }
    list-style: none;
    li {
      border-left: 1px solid transparent;
      margin: 00;
      div.node {
         padding: 0.4em 0 0 0.8em;
         position: relative;
      } 
      position: relative;
      font-weight: normal;
      .active {
        font-weight: bold;
      }
      span.label {
        display: block;
      }
    }
    li:hover {
      border-left: 1px solid #999999;
    }
  }
  div.tree ul.tree {
    margin: 0;
  }
  .page_margins div.page div {
    .rendering {
      position: relative;
      clear: both;
      .fake {
        height: 8em;
        span.message {
          font-size: 130%;
          padding: <%= @medium %>;
          background-color: <%= @colors[:base] %>;
          position: relative;
          top: 23%; left: 42%;
        }
      }
    }
    .grid.hover                   { background: #aaa;}
    .grid .grid.hover             { background: #bbb;}
    .grid .grid .grid.hover       { background: #ccc;}
    .grid .grid .grid .grid.hover { background: #ddd;}
    .rendering.hover              { background: url(../images/pentagon-tile.jpg) repeat <%= @colors[:hover] %>;}

  }

}


div#toolbox {
  div.frame {
    text-align: left;
  }
  li > div.grid.preview, dd > div.grid.preview {
    width: 18em;
    height: auto;
    min-height: 2em;
    border: <%= @small %> solid <%= @colors[:base] %>;
    float: left;
  }
  div.grid.preview {
    min-height: 6em;
    background-color: #eee;
    *.grid { min-height: 5em; background-color: #ccc}
    *.grid .grid { min-height: 4em; background-color: #aaa}
    *.grid .grid .grid { min-height: 3em; background-color: #999}

    outline: 1px solid <%= @colors[:base] %>;
    margin: 4px -2px;
    :hover { outline-color: <%= @colors[:hover] %>; }

    span.label {
      text-align: center;
      display: block;
      position: absolute;
      top: 50%;
      margin-top: -0.7em;
      width: 100%;
      color: <%= @colors[:text] %>;
    }
    .active {
      outline-color: <%= @colors[:text] %>;
      > span.label {
        font-weight: bold;
      }
    }
  }
}

form {
  label {
    float: left;
    text-align: left;
    display: block;
    font-weight: bold;
  }
  select {
    float: right;
    background-color: <%= @colors[:input] %>;
    color:  <%= @colors[:text] %>;
    border-color: <%= @colors[:input_border] %>;
    border-style: none solid;
    border-width: 1px;
    option {
      background-color: inherit;
    }
  }
  span.date select, span.datetime select {
    float: none;
  }
  textarea {
    background-color: <%= @colors[:input] %>;
    color:  <%= @colors[:text] %>;
    border-color: <%= @colors[:input_border] %>;
    border-style: solid none;
    border-width: 1px;
  }
  input {
    float: right;
    [type="text"],[type="password"] {
      width: 75%;
      background-color: <%= @colors[:input] %>;
      color:  <%= @colors[:text] %>;
      border-color: <%= @colors[:input_border] %>;
      border-style: none none solid none;
      border-width: 1px;
      padding: <%= @small %> <%= @small %> 0;
    }
    #search_term {
      float: left;
      clear: both;
    }
  }
  ul.define_options {
    img.add.option {
      margin: <%= @tiny %>;
      cursor: pointer;
      float: right;
    }
    li {
      float: left;
      clear: left;
      position: relative;
      .dummy { display: none }
      img.remove.option { 
        margin: <%= @tiny %>;
        cursor: pointer;
        display: block;
        position: absolute;
        top: 0;
        right: 0;
      }
      *.name    {  float: left; width: 33%; }
      *.type    {  float: left; width: 26%; }
      *.default {  float: left; width: 33%; }
    }
  }
}
ul.list {
  margin: 0;
  clear: both;
  li { 
    position: relative;
    text-align: left;
    padding: 0.3em;
    margin: 1px 0;
    list-style: none;
    .image {
      img {
        float: left; 
      }
      span.title {
        float: left;
        padding: <%= @medium %>;
      }
    }
  }
}

span.title {
  font-weight: bold;
}

/* 
 * If we show a record, place the show icon on the right
 * */
di.record {
  dd { 
    position: relative;
    padding-right: 25px !important;
  }
  a.show, a.edit {
    right: 0.3em;
  }
}

/* If we edit an association , place the add/remove icons on the left */
di.association {
  dd {
    width: 100% !important;
    margin: 0 !important;
    position: relative;
  }
  .one ul.list.hover > li {
    display: none;
  }
  ul.list {
    margin: 5%;
    padding: 2.5%;
    width: 85%;
    list-style: none;
    li {
      position: relative;
      a.show, a.edit {
        right: 0.3em;
      }
    }
  }
}

div.live_search {
  position: relative;
  clear: both;
  width: 90%;
  margin: 5%;
  input.search_term {
    float: left;
    margin: 3% 3%;
    width: 94%;
  }
  .polymorphic input.search_term {
    width: 60%;
  }
  select.polymorph_search_url {
    float: left;
    width: 28%;
    margin: 3% 3%;
  }
  div.search_results {
    clear: both;
    width: 94%;
    margin: 3%;
    ul {
      width: 94%;
      margin: 0;
      padding 3%;
    }
  }
}

/* here was div.node */
ul.list, dl, ul.tree {
  a {
    /* position: absolute; */
    .show, .index, .edit {
      position: absolute;
      right: <%= @small %>;
      top: 50%;
      margin-top: -8px;
      display: none !important;
    }
    .toggle_live_search {
      float: left;
      text-indent: -5000px;
      width: 16px; height: 16px;
      background: transparent url(/images/icons/small/search.gif) no-repeat scroll right;
      position: absolute;
      top: -1.7em;
      right: 0;
    }
    .association {
      position: absolute;
      display: none !important;
      top: 50%;
      margin-right: 16px;
      margin-top: -8px;
      right: <%= @medium %>;
    }
  }
  img.icon {
    margin: 0 6px 0 0;
    float: left;
  }
  li:hover, di:hover > *, li:hover > div.node  {
    > a.show, > a.index, a.edit, > a.association {
      display: block !important;
    }
  }
}


div.busy {
  position: absolute;
  top: 0; left: 0;
  width: 100%; height: 100%;
  margin: 0;
  paddding: 0;
  display: none;
  background: url(/images/transparent.png);
  span.message {
    position: absolute;
    top: 23%;
    background: transparent;
    left:0; right: 0;
    text-align: center;
    font-size: 230%;
    line-height: 100%;
    color: <%= @colors[:base] %>;
  }
  img.status {
    position: absolute;
    top: 50%;
    left: 50%;
    margin: -85px 0 0 -125px;
  }
}


*.ui-dialog {
  *.ui-button {
    padding: 1px;
    display: block;
    height: 18px;
    width: 19px;
    float: left;
    span { display: block; margin: 1px; }
    :focus, :hover { padding: 0; }
  }

  *.ui-dialog-titlebar {
     span.buttons {
       a {
         position: static; /* undo jquery ui-dialog-titlebar-close */
       }
       .left {
         float: left;
         margin: 0 0 0 -0.7em;
       }
       .left a {
         float: left;
         margin: 0;
       }
       .right, .right a {
         float: right;
         margin: 0;
       }
     }
  }
}

div.minimized {
  position: fixed;
  bottom: 0;
  right: 0;
  padding: 0.7em;
  min-width: 15em;
  max-width: 42%;
}
