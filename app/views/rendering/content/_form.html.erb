<%= warning_tag 'Editing this Content will change its appearance on other pages' %>
<%= error_messages_for :content %>
<% update_content_form(@content) do |f| %>
  <%= render :partial => field_partial_for(@content), :object => f %>
  <%= hidden_field_tag :rendering_id, @rendering.id %>
  <p><%= submit_tag _('Submit'), :class => 'submit' %> or <%= show_rendering_link(@rendering, :label => 'cancel') %></p>
<% end %>

