<% part ||= form || @part %>
<%= error_messages_for :part %>

<% form_for(part) do |f| %>

  <% accordion do %>

    <% accordion_item 'Basic' do %>
      <%= f.text_field :name %>
      <%= f.text_area :description %>
    <% end %>

    <% accordion_item 'Preferred Types' do %>
      <%= f.multiple_checkbox :preferred_types, Part.valid_content_types, :none => 'none' %>
    <% end %>

    <% accordion_item 'Code' do %>
      <%= f.text_area :liquid %>
    <% end %>

    <% accordion_item 'Options' do %>
      <%= f.define_options %>
    <% end %>

    <%= f.submit %>

  <% end %>
<% end %>

