<h1>Editing part</h1>

<%= error_messages_for :part %>

<% form_for(@part) do |f| %>
  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b>Filename</b><br />
    <%= f.text_field :filename %>
  </p>

  <p>
    <b>Options</b><br />
    <%= f.text_area :options %>
  </p>

  <p>
    <b>Preferred types</b><br />
    <%= f.text_area :preferred_types %>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @part %> |
<%= link_to 'Back', parts_path %>
