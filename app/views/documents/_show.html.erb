<% document ||= show || @document %>

<% accordion do %>

  <% accordion_item "General" do %>
    <%= show document, :title %>
    <%= show document, :parent %>
  <% end %>

  <% accordion_item 'Description' do %>
    <%= show document, :description, :label => false %>
  <% end %>

  <% accordion_item 'Body' do %>
    <%= show document, :body, :label => false %>
  <% end %>

  <%= actings_for document %>

<% end %>

