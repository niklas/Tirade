<% document ||= form || @document %>

<% form_for(document) do |f| %>
  <% accordion do %>
    <%= f.error_messages %>

    <% accordion_item "General" do %>
      <%= f.text_field :title %>
      <%= f.tree_select :parent_id,  Folder.roots, :id, :title, :include_blank => true, :label => 'Parent Folder' %>
    <% end %>

    <% accordion_item 'Description' do %>
      <%= f.text_area :description, :label => false %>
    <% end %>

    <% accordion_item 'Body' do %>
      <%= f.text_area :body, :label => false %>
    <% end %>

    <%= f.actings %>

    <%= f.submit %>

  <% end %>
<% end %>
