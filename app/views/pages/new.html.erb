<h3>New page</h3>

<%= error_messages_for :page %>

<% form_for(@page) do |f| %>
  <p>
    <label for="title">Title</label>
    <%= f.text_field :title %>
  </p>

  <p>
    <label for="title">Url</label>
    <%= f.text_field :url %>
  </p>

  <p>
    <label for="layout_id">Layout</label>
    <%= f.text_field :layout_id %>
  </p>

  <p>
    <%= f.submit "Create", :class => "submit" %> or <%= link_to 'Back', pages_path %>
  </p>
<% end %>
