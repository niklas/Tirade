<h1>New page</h1>

<%= error_messages_for :page %>

<% form_for(@page) do |f| %>
  <p>
    <b>Title</b><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <b>Url</b><br />
    <%= f.text_field :url %>
  </p>

  <p>
    <b>Parent</b><br />
    <%= f.text_field :parent_id %>
  </p>

  <p>
    <b>Lft</b><br />
    <%= f.text_field :lft %>
  </p>

  <p>
    <b>Rgt</b><br />
    <%= f.text_field :rgt %>
  </p>

  <p>
    <b>Layout</b><br />
    <%= f.text_field :layout_id %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', pages_path %>
