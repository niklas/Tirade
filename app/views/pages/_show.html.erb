<% thepage ||= show || @page %>

<% links do %>
  <%= public_page_link(@page, :label => 'show', :class => 'show page with_toolbox') %>
<% end %>

<% accordion do %>

  <% accordion_item 'General', :content_tag => :dl do %>
    <%= show thepage, :title %>
    <%= show thepage, :url, :label => 'URL' %>
    <% show thepage, :children, :label => 'Subpages' do %>
      <%= list_of thepage.children, :class => 'good_list' %>
    <% end %>
  <% end %>

  <% accordion_item "Layout", :content_tag => :dl do %>
    <%= show thepage, :width %>
    <%= show thepage, :css_classes, :label => 'extra CSS classes' %>
    <%= show thepage, :alignment %>
    <%= render_tree thepage %>
  <% end %>

  <% accordion_item "Renderings", :content_tag => :dl do %>
    <%= show thepage, :renderings %>
  <% end %>

<% end %>
