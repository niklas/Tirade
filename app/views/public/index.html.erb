<% content_for :head do %>
  <base href="<%= url_for(:path => @page.path, :trailing_slash => !@page.path.empty?, :only_path => false) -%>" />
  <% wanted_locales.each do |locale| %>
    <%= alternate_locale_link @page, locale %>
  <% end %>
<% end %>
<%= render_page(@page) %>
<%= render :partial => '/shared/loginout' unless exporting? %>
