<% rendering ||= form %>
<% links do %>
  <%= back_link 'cancel' %>
<% end %>
<%= error_messages_for :rendering, :object => rendering %>

<% form_for(@rendering) do |f| %>
  <% accordion do %>

    <% accordion_item "What" do %>
      <%= f.has_one :content %>
    <% end %>

    <% accordion_item "How" do %>
      <%= f.has_one :part %>
    <% end %>

    <% if f.object.part %>
      <% accordion_item "Options" do %>
        <%= f.select_options %>
      <% end %>
    <% end %>

    <%= f.submit %>

  <% end %>
<% end %>
