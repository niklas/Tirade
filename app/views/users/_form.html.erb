<%= error_messages_for :user %>

<% form_for user do |f| %>

  <% accordion do %>

    <% accordion_item 'Base' do %>
      <%= f.text_field :login %>

      <% if user.new_record? %>
        <%= f.password_field :password %>
        <%= f.password_field :password_confirmation %>
      <% end %>

      <%= f.text_field :email %>
    <% end %>

    <% accordion_item 'Groups' do %>
      <%= f.has_many :user_groups %>
    <% end %>

    <%= f.submit %>

  <% end %>

<% end %>

