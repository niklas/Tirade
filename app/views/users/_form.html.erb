<%= error_messages_for :user %>

<% form_for user do |f| %>

  <% accordion do %>

    <% accordion_item 'Base' do %>
      <%= f.text_field :login %>

      <%= f.text_field :email %>
    <% end %>

    <% accordion_item 'Password' do %>
      <%= f.password_field :password %>
      <%= f.password_field :password_confirmation %>
    <% end %>

    <%= f.submit %>

  <% end %>

<% end %>

