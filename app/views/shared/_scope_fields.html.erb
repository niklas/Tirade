<% content_tag :div, options do %>

  <%= scope_fields.select_without_wrap :attribute, 
    rendering.content_class.columns_hash.keys, {:include_blank => true}, 
    :class => 'scope_attribute', :name => 'scope_attribute', :declare => true %>

  <%= scope_fields.select_without_wrap :comparison, 
    grouped_options_for_select(rendering.content_class.scopes_grouped_by_column, scoping.comparison), {}, 
    :class => 'scope_comparison', :name => 'scope_comparison', :declare => true %>

  <%= scope_fields.text_field_without_wrap scoping.name, :class => 'scope_value' %>

<% end %>
