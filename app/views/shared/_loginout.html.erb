<div class="loginout minimized ui-widget ui-widget-header ui-corner-tl">
  <p class="ui-helper-clearfix">
  <% if logged_in? %>
    <%= t 'shared.logged_in_as', :name => current_user.full_name %>
    <%= link_to "Log out", logout_path, :class => 'logout' %>
  <% else %>
    <%= link_to 'Signup', signup_path, :class => 'signup new user' %> | 
    <%= link_to 'Login', login_path, :class => 'login' %>
  <% end %>
    | <%= link_to_open 'Toolbox', dashboard_path, :class => 'dashboard with_toolbox' %>
  </p>
</div>

