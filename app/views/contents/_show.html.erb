<% content ||= show || @content %>

<% accordion do %>

  <% accordion_item "Hierarchy" do %>
    <%= show content, :parent %>
    <%= show content, :children %>
  <% end %>

  <% accordion_item "General" do %>
    <%= show content, :title %>
  <% end %>

  <% accordion_item "Specific" do %>
    <%= render_attributes_for content %>
  <% end %>

  <%= actings_for content %>

<% end %>

