<h1>New content</h1>

<%= error_messages_for :content %>

<% form_for(:content, @content, :url => contents_path) do |f| %>
  <p>
    <b>Title</b><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <b>Description</b><br />
    <%= f.text_area :description %>
  </p>

  <p>
    <b>Body</b><br />
    <%= f.text_area :body %>
  </p>

  <p>
    <b>Type</b><br />
    <%= f.collection_select :type, Content.valid_types, :to_s, :to_s %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', contents_path %>
