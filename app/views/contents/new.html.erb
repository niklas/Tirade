<h1>New content</h1>

<%= error_messages_for :content %>

<% form_for(@content) do |f| %>
  <p>
    <b>Title</b><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <b>Description</b><br />
    <%= f.text_area :description %>
  </p>

  <p>
    <b>Body</b><br />
    <%= f.text_area :body %>
  </p>

  <p>
    <b>Type</b><br />
    <%= f.text_field :type %>
  </p>

  <p>
    <b>State</b><br />
    <%= f.text_field :state %>
  </p>

  <p>
    <b>Owner</b><br />
    <%= f.text_field :owner_id %>
  </p>

  <p>
    <b>Published at</b><br />
    <%= f.datetime_select :published_at %>
  </p>

  <p>
    <b>Position</b><br />
    <%= f.text_field :position %>
  </p>

  <p>
    <b>Parent</b><br />
    <%= f.text_field :parent_id %>
  </p>

  <p>
    <b>Lft</b><br />
    <%= f.text_field :lft %>
  </p>

  <p>
    <b>Rgt</b><br />
    <%= f.text_field :rgt %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', contents_path %>
