<h1>Editing content</h1>

<%= error_messages_for :content %>

<% form_for(:content, @content, :url => content_path(@content), :html => {:method => :put} ) do |f| %>
  <p>
    <b>Title</b><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <b>Description</b><br />
    <%= f.text_area :description %>
  </p>

  <p>
    <b>Body</b><br />
    <%= f.text_area :body %>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= show_content_link(@content, :label => 'Show') %>
<%= index_contents_link(:label => 'Back to List') %>
