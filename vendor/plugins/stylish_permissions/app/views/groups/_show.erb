
<% group ||= show %>
<% links do %>
  <li><%= edit_group_link group %></li>
  <li><%= index_groups_link :label => 'Back to List' %></li>
<% end %>

<% accordion do %>

  <% accordion_item "Users" do %>
    <ul class="users">
      <% group.users.each do |user| %>
        <li><%= user.full_name %></li>
      <% end %>
    </ul>
  <% end %>

  <% accordion_item "Roles" do %>
    <ul class="roles">
      <% group.roles.each do |role| %>
        <li><%= role.name %></li>
      <% end %>
    </ul>
  <% end %>

<% end %>
