<p>Enter your new password in the form below.</p>

<% form_for('user', :url => password_path, :html => {:method => :put}) do |f| %>
	<div id="password">
		<label for="user_password">Password</label>
		<%=f.password_field 'password'%>
	</div>
	<div id="password_confirmation">
		<label for="user_password_confirmation">Password</label>
		<%=f.password_field 'password_confirmation'%>
	</div>
	<%=submit_tag 'Update'%>
<% end %>
