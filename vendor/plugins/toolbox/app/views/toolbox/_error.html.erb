<% exception ||= error || @exception %>

<% links do %>
  <%= li_link_to '"OK"', '#', :class => 'back ok' %>
<% end %>

<% accordion do %>

  <% accordion_item "Message", :content_tag => :div do %>
    Showing <i><%=h exception.file_name %></i> where line <b>#<%=h exception.line_number %></b> raised:
    <pre><code><%=h exception.message %></code></pre>
  <% end %>

  <% accordion_item "Source", :content_tag => :div do %>
    Extracted source (around line <b>#<%=h exception.line_number %></b>):
    <pre><code class="rhtml"><%=h exception.source_extract %></code></pre>
  <% end %>

  <%= render :partial => '/toolbox/traces', :object => exception.original_exception || exception  %>

<% end %>


