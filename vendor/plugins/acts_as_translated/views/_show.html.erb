<% accordion_item "Translations" do %>
  <% translations = record.globalize_translations %>
  <ul class="list">
    <% Locale.activated.each do |locale| %>
      <% if record.translated_locales.include?(locale) %>
        <li class="translation">
          <%= t('shared.locale.name', :name => locale) %>
          <%= link_to_show record, :params => {:locale => locale } %>
        </li>
      <% else %>
        <li class="translation missing">
          <%= t 'shared.locale.missing', :name => locale %>
          <%= link_to_edit record, :params => { :locale => locale } %>
        </li>
      <% end %>
    <% end %>
  </ul>
<% end %>
